        },
        x86_64: {
            srcs: [
                "BLAKE3/blake3_avx2_x86-64_unix.S",
                "BLAKE3/blake3_avx512_x86-64_unix.S",
                "BLAKE3/blake3_sse2_x86-64_unix.S",
                "BLAKE3/blake3_sse41_x86-64_unix.S",
