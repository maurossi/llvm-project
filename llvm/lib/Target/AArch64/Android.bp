cc_library_static {
    name: "libLLVM11AArch64CodeGen",
    defaults: [
        "llvm11-lib-defaults",
        "llvm11-aarch64-defaults",
    ],
    srcs: [
        "*.cpp",
        "GISel/*.cpp",
    ],
}

cc_defaults {
    name: "llvm11-aarch64-defaults",
    generated_headers: ["llvm11-gen-aarch64"],
    static_libs: ["llvm11-aarch64-headers"],
}

cc_library_static {
    name: "llvm11-aarch64-headers",
    vendor_available: true,
    host_supported: true,
    target: {
        windows: {
            enabled: true,
        },
    },
    export_include_dirs: ["."],
}

llvm11_tblgen {
    name: "llvm11-gen-aarch64",
    in: "AArch64.td",
    outs: [
        "AArch64GenRegisterInfo.inc",
        "AArch64GenInstrInfo.inc",
        "AArch64GenAsmWriter.inc",
        "AArch64GenAsmWriter1.inc",
        "AArch64GenDAGISel.inc",
        "AArch64GenCallingConv.inc",
        "AArch64GenAsmMatcher.inc",
        "AArch64GenSubtargetInfo.inc",
        "AArch64GenMCCodeEmitter.inc",
        "AArch64GenFastISel.inc",
        "AArch64GenDisassemblerTables.inc",
        "AArch64GenMCPseudoLowering.inc",
        "AArch64GenSystemOperands.inc",
        "AArch64GenRegisterBank.inc",
        "AArch64GenGlobalISel.inc",
        "AArch64GenPreLegalizeGICombiner.inc",
        "AArch64GenPostLegalizeGICombiner.inc",
    ],
}

subdirs = ["*"]
